<h1>Index</h1>

<% @posts.each do |post| %>
  <%= post.title %>
  <% if user_signed_in? %>
    <%= post.user.email %>
  <% end %>
  <br>
<% end %>

<% if !user_signed_in? %>
  <%= link_to "Sign in", new_user_session_path %>
<% else %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
<% end %>